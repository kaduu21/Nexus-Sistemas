<?php

class Ocorrencia {
    private string $titulo;
    private string $descricao;
    private string $turma;
    private int $gravidade;
    private string $disciplina;
    private string $data_ocorrencia;

    public function setTitulo($titulo) {
        $this->titulo = $titulo;
    }

    public function setDescricao($descricao) {
        $this->descricao = $descricao;
    }

    public function setTurma($turma) {
        $this->turma = $turma;
    }

    public function setGravidade($gravidade) {
        $this->gravidade = $gravidade;
    }

    public function setDisciplina($disciplina) {
        $this->disciplina = $disciplina;
    }

    public function setDataOcorrencia(){
        $this->data_ocorrencia = date('Y-m-d H:i:s');
    }

    /* public function setDataOcorrencia($dataOcorrencia){
        $this->data_ocorrencia = $dataOcorrencia;
    } */

    public function getTitulo() {
        return $this->titulo;
    }

    public function geDescricao() {
        return $this->descricao;
    }

    public function getTurma() {
        return $this->turma;
    }

    public function getGravidade() {
        return $this->gravidade;
    }

    public function getDisciplina() {
        return $this->disciplina;
    }

    public function getDataOcorrencia() {
        return $this->data_ocorrencia;
    }
}